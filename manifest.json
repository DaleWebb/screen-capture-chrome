{
  "name": "Capture",
  "version": "0.9",
  "manifest_version": 2,
  "icons": {
    "16": "camera.png",
    "128": "camera.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "audioCapture",
    "videoCapture",
    {"fileSystem": ["write", "directory"]}
  ]
}
